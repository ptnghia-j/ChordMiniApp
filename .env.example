# Firebase Configuration (required for database functionality)
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# YouTube API Key (required for YouTube video search and metadata)
NEXT_PUBLIC_YOUTUBE_API_KEY=your_youtube_api_key_here

# Music.ai API Key (required for lyrics transcription)
MUSIC_AI_API_KEY=your_music_ai_api_key_here

# Set to 'true' to use mock implementation for testing without a Music.ai API key
USE_MOCK_MUSIC_AI=false

# Python Backend API URL (Google Cloud Run Production Service)
# Full backend service (beat detection, chord recognition, lyrics)
NEXT_PUBLIC_PYTHON_API_URL=https://chordmini-backend-full-191567167632.us-central1.run.app

# For local development, uncomment and use:
# NEXT_PUBLIC_PYTHON_API_URL=http://localhost:5000

# Base URL for the application (used for generating public URLs)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Gemini API Key (required for lyrics translation)
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

# Genius API Key (required for lyrics fetching from Genius.com)
GENIUS_API_KEY=your_genius_api_key_here

# ===== DEPLOYMENT NOTES =====
# 1. Current backend service is operational and ready to use
# 2. For production, update NEXT_PUBLIC_BASE_URL to your domain
# 3. The Google Cloud Run service provides all features in one endpoint
